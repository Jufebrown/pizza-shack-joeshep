extends partials/layout.pug

block content
  if errors
    each err in errors
      h1= err.message
  .heading
    h1 Order
  .order-form
    form(method="POST")
      //- (class={'has-error': errors.name})
      .form-group
        label.control-label(for='name') Name
        input.form-control#name(
          type='text'
          name='name'
          placeholder='Beelzebub'
          value=body.name
          required
        )
        //- if errors.name
        //-   span.help-block= errors.name.message
        //- (class={'has-error': errors.phone})
      .form-group
        label.control-label(for='phone') Phone Number
        input.form-control#phone(
          type='tel'
          name='phone'
          placeholder='666-666-6666'
          value=body.phone
          required
        )
        //- if errors.phone
        //-   span.help-block= errors.phone.message
      //- (class={'has-error': errors.size})
        //- (class={'has-error': errors.email})
      .form-group
        label.control-label(for='email') Email
        input.form-control#email(
          type='email'
          name='email'
          placeholder='beelzebub@hell.com'
          value=body.email
          required
        )
        //- if errors.phone
        //-   span.help-block= errors.phone.message
      //- (class={'has-error': errors.size})
      .form-group
        label.control-label(for='size') Size
        select.form-control#size(
          name='size'
          required
        )
          option(disabled selected) Select a size:
          each size in sizes
            option(
              value=size.sizes_inches
              selected=(+body.size === +size.sizes_inches)
            ) #{size.name}: #{size.inches}
        //- if errors.size
        //-   span.help-block= errors.size.message
      //- (class={'has-error': errors.toppings})
      #toppings
        h5 Toppings:
        each topping in toppings
          label= topping.name
          input(
            type='checkbox'
            name='toppings'
            value=topping.name
            selected=(body.toppings && body.toppings.includes(topping.name))
          )
        //- if errors.toppings
        //-   span.help-block= errors.toppings.message
      .order-form__submit
        a.btn.btn-danger.btn-lg.cancel-btn(href='/') Cancel
        input.btn.btn-success.btn-lg(type="submit" value='Order It!')
